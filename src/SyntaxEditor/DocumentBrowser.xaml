<UserControl x:Class="SyntaxEditor.DocumentBrowser"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:s="clr-namespace:SyntaxEditor"
             xmlns:c="clr-namespace:SyntaxEditor.Controls"
             xmlns:m="clr-namespace:SyntaxEditor.Model"
             xmlns:vm="clr-namespace:SyntaxEditor.ViewModel"
             xmlns:sample="clr-namespace:SyntaxEditor.ViewModel.Sample"
             mc:Ignorable="d"
             d:DesignHeight="450"
             d:DesignWidth="600">
    <UserControl.DataContext>
        <vm:DocumentBrowser />
    </UserControl.DataContext>
    <d:UserControl.DataContext>
        <sample:DocumentBrowser />
    </d:UserControl.DataContext>
    <c:SplitPanel Orientation="Horizontal">

        <s:CodeBrowser>
            <s:CodeBrowser.DataContext>
                <sample:CodeBrowser />
            </s:CodeBrowser.DataContext>
        </s:CodeBrowser>

        <s:SyntaxBrowser>
            <s:SyntaxBrowser.DataContext>
                <sample:SyntaxBrowser />
            </s:SyntaxBrowser.DataContext>
        </s:SyntaxBrowser>

    </c:SplitPanel>
</UserControl>
