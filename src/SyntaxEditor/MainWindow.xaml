<Window x:Class="SyntaxEditor.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:s="clr-namespace:SyntaxEditor"
        xmlns:c="clr-namespace:SyntaxEditor.Controls"
        xmlns:m="clr-namespace:SyntaxEditor.Model"
        xmlns:vm="clr-namespace:SyntaxEditor.ViewModel"
        xmlns:sample="clr-namespace:SyntaxEditor.ViewModel.Sample"
        Title="MainWindow"
        Height="450"
        Width="800">
    <DockPanel>
        <Menu DockPanel.Dock="Top">
            <MenuItem Header="_File">
                <MenuItem Header="_Open (.ts)" />
                <MenuItem Header="_Save (.cs)" />
                <Separator />
                <MenuItem Header="_Exit" />
            </MenuItem>
        </Menu>
        <s:PropertyBrowser DockPanel.Dock="Right"
                           Grid.Column="4">
            <s:PropertyBrowser.DataContext>
                <sample:PropertyBrowser />
            </s:PropertyBrowser.DataContext>
        </s:PropertyBrowser>
        <TabControl>
            <TabItem>
                <s:DocumentBrowser />
            </TabItem>
        </TabControl>
    </DockPanel>
</Window>
